{
  "name": "fieldsmartpro-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@9.0.0",
  "workspaces": [
    "apps/api",
    "apps/web",
    "infrastructure",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "deploy": "turbo run deploy",
    "db:migrate": "npm run migrate --workspace=@fieldsmartpro/api",
    "db:studio": "npm run studio --workspace=@fieldsmartpro/api"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
