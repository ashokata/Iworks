{
  "name": "@fieldsmartpro/api",
  "version": "1.0.0",
  "private": true,
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:local": "cp .env.local .env && tsx watch src/index.ts",
    "build": "tsc && esbuild src/handlers/**/*.ts --bundle --platform=node --target=node20 --outdir=dist/handlers --external:@aws-sdk/* --external:pg-native --external:@prisma/client && node copy-prisma.js",
    "build:skip-check": "esbuild src/handlers/**/*.ts --bundle --platform=node --target=node20 --outdir=dist/handlers --external:@aws-sdk/* --external:pg-native --external:@prisma/client --log-level=warning && node copy-prisma.js",
    "build:dev": "cp .env.development .env && npm run build",
    "build:prod": "cp .env.production .env && npm run build",
    "deploy": "npm run build && cd ../../infrastructure && cdk deploy --all --require-approval never",
    "deploy:dev": "npm run build:dev && cd ../../infrastructure && cdk deploy FieldSmartProStack-Development --require-approval never",
    "deploy:prod": "npm run build:prod && cd ../../infrastructure && cdk deploy FieldSmartProStack-Production --require-approval never",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "studio": "prisma studio",
    "seed": "tsx prisma/seed.ts",
    "test": "jest",
    "create-tenant-with-vapi": "tsx scripts/create-tenant-with-vapi.ts",
    "list-tenants": "tsx scripts/list-tenants.ts"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.685.0",
    "@aws-sdk/client-dynamodb": "^3.685.0",
    "@aws-sdk/lib-dynamodb": "^3.685.0",
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.6",
    "@types/supertest": "^6.0.2",
    "aws-cdk-lib": "^2.167.1",
    "aws-sdk-client-mock": "^3.0.1",
    "constructs": "^10.3.0",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
