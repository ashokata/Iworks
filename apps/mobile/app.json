{
  "expo": {
    "name": "iWorks",
    "slug": "iworks",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "scheme": "iworks",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E40AF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.iworks.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Take photos of job sites and equipment",
        "NSPhotoLibraryUsageDescription": "Select photos from your library",
        "NSLocationWhenInUseUsageDescription": "Show your location for navigation",
        "NSLocationAlwaysUsageDescription": "Track location for time entries",
        "NSMicrophoneUsageDescription": "Record voice notes"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E40AF"
      },
      "package": "com.iworks.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-camera",
      "expo-location",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow iWorks to access your photos for job documentation.",
          "cameraPermission": "Allow iWorks to take photos for job documentation."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#1E40AF"
        }
      ],
      "expo-speech-recognition"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "c6cda395-0011-4b3f-ac55-36493c69a438"
      }
    },
    "owner": "infield-works"
  }
}
